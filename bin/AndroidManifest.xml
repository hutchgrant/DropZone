<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dropzone"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hutchgrant.dropzone.core.IntroScreen"
            android:label="@string/title_activity_main_launch" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="hutchgrant.dropzone.core.game" android:label="@string/title_activity_game" android:screenOrientation="landscape"></activity>
    </application>

</manifest>